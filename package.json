{
  "name": "lm-core-tool",
  "displayName": "LM Core Tool",
  "description": "An extension for interacting with LogicMonitor's Core Tools.",
  "author": "Stuart Weenig",
  "publisher": "YOUR_PUBLISHER_ID",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:logicmonitor.pull",
    "onCommand:logicmonitor.push",
    "onCommand:logicmonitor.runActiveScript",
    "onCommand:logicmonitor.setCredentials",
    "onCommand:logicmonitor.setActivePortal",
    "onCommand:logicmonitor.setActiveDevice",
    "onCommand:logicmonitor.pullDataSource",
    "onCommand:logicmonitor.pullEventSource",
    "onCommand:logicmonitor.pullPropertySource",
    "onCommand:logicmonitor.pullConfigSource",
    "onCommand:logicmonitor.pullTopologySource",
    "onView:logicmonitor-settings",
    "onView:logicmonitor-current-selections",
    "onView:logicmonitor-navigation",
    "onView:logicmonitor-modules"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "logicmonitor.pull",
        "title": "LogicMonitor: Pull LogicModule(s)"
      },
      {
        "command": "logicmonitor.pullDataSource",
        "title": "Pull DataSource",
        "icon": "$(cloud-download)"
      },
      {
        "command": "logicmonitor.push",
        "title": "LogicMonitor: Push LogicModule(s)"
      },
      {
        "command": "logicmonitor.runActiveScript",
        "title": "Run Active Script",
        "icon": {
          "light": "media/play-light.svg",
          "dark": "media/play-dark.svg"
        }
      },
      {
        "command": "logicmonitor.pullEventSource",
        "title": "Pull EventSource",
        "icon": "$(cloud-download)"
      },
      {
        "command": "logicmonitor.pullPropertySource",
        "title": "Pull PropertySource",
        "icon": "$(cloud-download)"
      },
      {
        "command": "logicmonitor.pullConfigSource",
        "title": "Pull ConfigSource",
        "icon": "$(cloud-download)"
      },
      {
        "command": "logicmonitor.pullTopologySource",
        "title": "Pull TopologySource",
        "icon": "$(cloud-download)"
      },
      {
        "command": "logicmonitor.pullLogSource",
        "title": "Pull LogSource",
        "icon": "$(cloud-download)"
      },
      {
        "command": "logicmonitor.pullAppliesToFunction",
        "title": "Pull AppliesTo Function",
        "icon": "$(cloud-download)"
      }
    ],
    "menus": {
      "editor/context": [],
      "editor/title": [
        {
          "when": "resourceLangId == groovy || resourceLangId == powershell",
          "command": "logicmonitor.runActiveScript",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "when": "view == logicmonitor-modules && viewItem == remote-datasource",
          "command": "logicmonitor.pullDataSource",
          "group": "inline"
        },
        {
          "when": "view == logicmonitor-modules && viewItem == remote-eventsource",
          "command": "logicmonitor.pullEventSource",
          "group": "inline"
        },
        {
          "when": "view == logicmonitor-modules && viewItem == remote-propertysource",
          "command": "logicmonitor.pullPropertySource",
          "group": "inline"
        },
        {
          "when": "view == logicmonitor-modules && viewItem == remote-configsource",
          "command": "logicmonitor.pullConfigSource",
          "group": "inline"
        },
        {
          "when": "view == logicmonitor-modules && viewItem == remote-topologysource",
          "command": "logicmonitor.pullTopologySource",
          "group": "inline"
        },
        {
          "when": "view == logicmonitor-modules && viewItem == remote-logsource",
          "command": "logicmonitor.pullLogSource",
          "group": "inline"
        },
        {
          "when": "view == logicmonitor-modules && viewItem == remote-applies-to-function",
          "command": "logicmonitor.pullAppliesToFunction",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "logicmonitor-sidebar",
          "title": "LogicMonitor",
          "icon": "media/logicmonitor.svg"
        }
      ]
    },
    "views": {
      "logicmonitor-sidebar": [
        {
          "id": "logicmonitor-settings",
          "name": "SETTINGS"
        },
        {
          "id": "logicmonitor-current-selections",
          "name": "Current Selections"
        },
        {
          "id": "logicmonitor-navigation",
          "name": "Navigation"
        },
        {
          "id": "logicmonitor-modules",
          "name": "Modules"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {}
}